{
  "name": "@ugm/desiagent",
  "version": "0.1.32",
  "description": "A library-first async agent system for building autonomous workflows",
  "homepage": "https://github.com/ugmurthy/desiAgent",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "bun run --hot src/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate:sqlite --schema=src/db/schema.ts --out=src/db/migrations",
    "db:push": "drizzle-kit push:sqlite --schema=src/db/schema.ts --config=drizzle.config.ts",
    "db:studio": "drizzle-kit studio --schema=src/db/schema.ts --config=drizzle.config.ts",
    "prepublishOnly": "npm run build",
    "test:abort:openrouter": "bun run scripts/test-openrouter-abort.ts",
    "test:abort:ollama": "bun run scripts/test-ollama-abort.ts"
  },
  "keywords": [
    "agent",
    "async",
    "workflow",
    "automation",
    "llm",
    "bun"
  ],
  "author": "U G Murthy <ugmurthy@gmail.com>",
  "license": "MIT",
  "engines": {
    "bun": ">=1.3.5"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "cron-parser": "^5.4.0",
    "cronstrue": "^3.9.0",
    "drizzle-orm": "^0.45.1",
    "glob": "^13.0.0",
    "imapflow": "^1.2.7",
    "lodash": "^4.17.21",
    "mailparser": "^3.9.1",
    "nanoid": "^5.0.4",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.12",
    "ollama": "^0.5.0",
    "openai": "^4.24.1",
    "pdf-parse": "^2.4.5",
    "pino": "^8.17.2",
    "pino-pretty": "^13.1.3",
    "pino-roll": "^4.0.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/bun": "^latest",
    "@types/lodash": "^4.14.202",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^7.0.5",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
