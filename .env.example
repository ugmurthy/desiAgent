# DesiAgent Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI (required for 'openai' provider)
OPENAI_API_KEY=sk-...

# OpenRouter (required for 'openrouter' provider)
OPENROUTER_API_KEY=sk-or-...

# Ollama (optional, defaults to http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# Artifacts directory (optional, defaults to ./artifacts)
ARTIFACTS_DIR=./artifacts

# Logging configuration
LOG_DEST=file          # Options: 'file' or 'console' (defaults to file)
LOG_DIR=               # Optional, defaults to ~/.desiAgent/logs

# SMTP configuration (required for sendEmail tool)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
SMTP_FROM=your-email@example.com

# IMAP configuration (optional for readEmail tool, defaults to Gmail settings)
# If not set, SMTP_USER and SMTP_PASS will be used
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@gmail.com
IMAP_PASS=your-app-password
